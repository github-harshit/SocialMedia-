<link rel="stylesheet" href="/css/comment.css">

<div class="commmentDesign">
   
    <li id="comment-<%= comment._id %>" class="onlyComments"> 
        <p> <%=comment.user.name%></p>
        <p>
            <%=comment.content%>
           
          
         </p>
          <p>
          <%if(locals.user && locals.user.id==comment.user.id ){%>
              <small>
               
                  <a  class="delete-comment-button" href="/comments/destroy/<%=comment._id%>"><i class="fa-solid fa-trash"></i></a>
              </small>
         <% }%>
    
    
        
        
             
               
    
                        
            <% if (locals.user){ %>
                <a class="toggle-like-button-comment" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                        <%= comment.likes.length %> <i class="fa-regular fa-thumbs-up"></i>
                </a>
            <% }else{ %>
                <%= comment.likes.length %> <i class="fa-regular fa-thumbs-up"></i>
            <% } %>
        </p>
    
            
            
    
    
       
       
          
       
    
       </li>
     

</div>
